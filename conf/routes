# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# HomeController
GET     /                           controllers.HomeController.index()
GET     /get-search-term/:query     controllers.HomeController.getSearchTerm(query: String)
GET     /owner-profile/:owner_id    controllers.HomeController.getOwnerDetails(owner_id: String)
GET     /get-skill-search/:skill_name controllers.HomeController.getSkillSearch(skill_name: String)
GET     /stats/:query               controllers.HomeController.getWordStats(query: String)
GET     /stats/single/:project_id   controllers.HomeController.getSingleProjectStats(project_id: Integer)
GET     /readablity/:description    controllers.HomeController.readablity(description: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
